<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyback"
    tools:context=".ui.home.NotesHomeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notesRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:paddingTop="8dp"
        android:paddingBottom="96dp"
        android:overScrollMode="never"
        tools:listitem="@layout/item_note_card"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNotesFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_white"
        app:backgroundTint="#000000"
        app:tint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp"
        android:layout_marginEnd="24dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNotesFabMenu1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_page_lined_bullets"
        app:backgroundTint="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addNotesFab"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:tint="@null"
        app:elevation="0dp"
        app:rippleColor="@android:color/transparent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNotesFabMenu3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_user_white"
        app:backgroundTint="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addNotesFabMenu1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:tint="@null"
        app:elevation="0dp"
        app:rippleColor="@android:color/transparent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNotesFabMenu4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_white"
        app:backgroundTint="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addNotesFabMenu3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:tint="@null"
        app:elevation="0dp"
        app:rippleColor="@android:color/transparent"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addNotesFabMenu5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_white"
        app:backgroundTint="#000000"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/addNotesFabMenu4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="24dp"
        app:tint="@null"
        app:elevation="0dp"
        app:rippleColor="@android:color/transparent"/>

    <include
        layout="@layout/bottom_notch_nav"
        android:id="@+id/bottomNotchNavInclude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout> 