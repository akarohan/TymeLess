<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/bg_audio_chip_pill"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Mic icon (not a button) -->
        <ImageView
            android:id="@+id/audioIconPreview"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/circle_white_bg"
            android:src="@drawable/ic_mic_filled"
            android:contentDescription="Audio preview icon"
            android:tint="#222222"
            android:layout_marginEnd="8dp"/>

        <!-- Vertical stack: waveform and duration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Waveform at the top -->
            <ImageView
                android:id="@+id/audioWaveformPreview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_waveform" />

            <!-- Duration at the bottom -->
            <TextView
                android:id="@+id/audioDurationPreview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:15"
                android:textColor="#222222"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout> 